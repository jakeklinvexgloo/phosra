# Go API backend URL (no trailing slash)
NEXT_PUBLIC_API_URL=http://localhost:8080

# Server-side API URL for playground routes
PHOSRA_API_URL=http://localhost:8080/api/v1

# WorkOS AuthKit authentication
WORKOS_CLIENT_ID=client_your_workos_client_id
WORKOS_API_KEY=sk_test_your_workos_api_key
WORKOS_COOKIE_PASSWORD=your-32-character-random-cookie-password
NEXT_PUBLIC_WORKOS_REDIRECT_URI=http://localhost:3000/auth/callback

# Sandbox mode (set to true for local dev without WorkOS)
NEXT_PUBLIC_SANDBOX_MODE=false

# Deploy hooks (optional — used by /dashboard/deploy)
VERCEL_DEPLOY_HOOK_PREVIEW=
VERCEL_DEPLOY_HOOK_PRODUCTION=
RAILWAY_DEPLOY_HOOK=

# Playground (optional)
# Use PLAYGROUND_ANTHROPIC_KEY if your shell already sets ANTHROPIC_API_KEY
# (dotenv won't override existing env vars)
ANTHROPIC_API_KEY=
PLAYGROUND_ANTHROPIC_KEY=

# Investor portal — SMS-first auth
TWILIO_ACCOUNT_SID=AC...
TWILIO_AUTH_TOKEN=...
TWILIO_PHONE_NUMBER=+1...
INVESTOR_JWT_SECRET=your-64-character-random-string-for-jwt-signing
INVESTOR_DB_URL=postgresql://user:password@localhost:5432/phosra
INVESTOR_SESSION_DAYS=30

# Email (optional — used for investor account linking)
RESEND_API_KEY=re_...
INVESTOR_NOTIFY_EMAIL=jake.k.klinvex@phosra.com
